<%  layout("layouts/boilerplate")  -%>
<div class="profile-page">
  <div class="page-header header-filter" data-parallax="true" style="background-image:url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');"></div>
  <div class="main main-raised">
  <div class="profile-content" style="margin-bottom: 75px;">
          <div class="container">
              <div class="row">
                <div class="col-md-6 ml-auto mr-auto">
                   <div class="profile">
                        <div class="avatar">
                            <img src="<%=user.image.secure_url%>" alt="Circle Image" class="img-raised rounded-circle img-fluid">
                        </div>
                        <div class="name">
                            <h3 class="title text-center"><%=user.firstName%> <%=user.lastName%></h3>
                           <% if(user.tagline!=undefined){ %>
                            <h6 class="text-center h6"><%=user.tagline%></h6>
                           <%}else{%>
                            <h6 class="text-center h6">Your Tagline Can be Seen Here !</h6> 
                           <%}%>
                        </div>
                    </div>
                </div>
              </div>
              <% if(user.bio!=undefined){ %>
              <div class="description">
                <h5 class="font-weight-bold" style="font-family: 'Chivo', sans-serif;" >About the author</h5>
                  <p class="p"><%=user.bio%></p>
              </div>
              <%}else{%>
                <div class="description">
                  <h5 class="font-weight-bold" style="font-family: 'Chivo', sans-serif;" >About the author</h5>
                    <p class="p">Your Bio Can be Seen Here !</p>
                </div>
              <%}%>
              <%if(post.length==0){%>
                  <p class="lead text-center ">All Your Recent Posts Can be Seen Here !</p>
              <%}%>
              <div class="row">
                <div  id="grid" data-columns>
                   <% post.forEach(function(posts){ %>
                      <div class="card salvator-card mb-4">
                         <% if(posts.images.length>0){ %>
                          <a href="/post/<%=posts._id%>" target="_blank">
                              <img src="<%=  posts.images[0].url %>" class="card-img-top" >
                          </a>   
                         <% } %>
                         <div class="card-body">
                          <p class="mb-2 date"><%= posts.createdAt.toDateString().toUpperCase() %></p>
                          <h5 class="card-title">
                              <% if(posts.title.length>50){%>
                                  <%=posts.title.substr(0,50)%>...
                            <%  }else{ %>
                                  <%=posts.title%>
                             <% } %> 
                          </h5>
                          <hr>
                          <span class="float-left mt-1">
                              <img src="<%= posts.author.image.secure_url %>" alt="userimage" class="index-img img-fluid" >
                              <span class="ml-2 pt-5">
                          by &nbsp;
                          <% if(posts.author.username.length>8){%>
                          <a href="/user/<%=posts.author._id%>"><%=  posts.author.username.substr(0,8)%>..</a>
                          <%  }else{ %>
                            <a href="/user/<%=posts.author._id%>"><%=  posts.author.username%></a>
                       <% } %> 
                        </span>
                        </span>
                          <span class="float-right btni"><i class="far fa-heart pr-2" style="font-size: 20px;"></i><%=posts.likes.length%> </span>
                        </div>
                      </div>
                   <% }); %>
                </div>
               </div>
          </div>
      </div>
</div>
</div>





























