<%  layout("layouts/boilerplate")  -%>
<div class="container">
   <div class="row">
      <div class="col-md-4 m-auto">
         <div class="card card-body">
            <h2 class="text-center">Update Password</h2>
            <form action="/reset/<%= token %>?_method=PUT" method="POST">
               <div class="form-group">
                  <label for="password">Password</label>
                   <input type="password" class="form-control" id="password" placeholder="Enter your new password" name="password">
                   <div id="check" class="pt-2"></div>
                </div>  
       
                <div class="form-group">
                   <label for="confirmp">Confirm Password</label>
                   <input type="password" id="confirmp" class="form-control"  placeholder="confirm password" name="confirm">
                </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-warning btn-block">Update Password</button>
                </div>
         </form>
         </div>
      </div>
   </div>








