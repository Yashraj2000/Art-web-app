<%  layout("layouts/general")  -%>
<div class="container">
    <% if(success && success.length > 0){%>
        <div class="container mt-3">
          <div class="alert alert-success alert-dismissible fade show"role="alert">
                   <h5 class="text-center mt-1"><%=success%></h5>  
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
          <% }if(error && error.length > 0){%>
            <div class="container mt-3">
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h5 class="text-center mt-1"><%=error%></h5>  
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            </div>
          <%}%>

    <div class="card mt-5" style="box-shadow: 0 4px 5px rgba(0, 0, 0, 0.1);">
        <div class="card-body">
            <h6 class="card-title">Verify Email</h6>
            <hr>
            <div class="row">
            <div class=" col-sm-6">
                <p class="card-text">
                    <p>We sent an email to <%=currentUser.email%> </p>
                    <p>To Create a Post, Please check Your email and verify your account</p>
                    <p> Didn't recieve the email ?</p>
                    <a href="/resend-email" style="color: blue;">Resend email</a>
                </p>
            </div>
            <div class="col-sm-6">
                <span class="material-icons" style="font-size: 12em;">
                    email
                    </span>
            </div>
        </div>
      </div>

</div>
</div>